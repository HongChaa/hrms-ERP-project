<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <!--   자동 카멜케이스 스네이크 케이스 변환 설정     -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <!--  entity 클래스 별칭 설정      -->
        <typeAlias alias="hr" type="com.hrms.project4th.mvc.entity.HrEmployees"/>
        <typeAlias alias="cnfm" type="com.hrms.project4th.mvc.entity.Confirm"/>
        <typeAlias alias="employees" type="com.hrms.project4th.mvc.entity.Employees"/>

    </typeAliases>

    <mappers>
        <!-- Mapper XML files -->

        <mapper resource="mappers/HrEmployeesMapper.xml"/>
        <mapper resource="mappers/ConfirmMapper.xml"/>
        <mapper resource="mappers/EmployeesMapper.xml"/>

    </mappers>


</configuration>